
{
	"parser": "babel-eslint",
	"plugins": [
		"flowtype"
	],
	"globals": {
		"$Keys": true,
		"$Values": true,
		"$ReadOnly": true,
		"$Exact": true,
		"$Diff": true,
		"$Rest": true,
		"$PropertyType": true,
		"$ElementType": true,
		"$NonMaybeType": true,
		"$ObjMap": true,
		"$TupleMap": true,
		"$Call": true,
		"Class": true,
		"$Shape": true,
		"$Supertype": true,
		"$Subtype": true
	},
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"rules": {
		"strict": [2, "never"],
		"no-var": 2,
		"prefer-const": 2,
		"no-shadow": 2,
		"no-shadow-restricted-names": 2,
		"no-unused-vars": [
			2,
			{
				"vars": "local",
				"args": "none"
			}
		],
		"no-undef": 2,
		"no-use-before-define": 2,
		"comma-dangle": [2, "never"],
		"no-cond-assign": [2, "always"],
		"no-console": 1,
		"no-debugger": 1,
		"no-alert": 1,
		"no-constant-condition": 1,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty": 2,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 0,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 2,
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-obj-calls": 2,
		"quote-props": [2, "as-needed", { "keywords": true }],
		"no-sparse-arrays": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"block-scoped-var": 2,
		"consistent-return": 2,
		"curly": 2,
		"default-case": 2,
		"dot-notation": [
			2,
			{
				"allowKeywords": true
			}
		],
		"eqeqeq": 2,
		"no-caller": 2,
		"no-else-return": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-octal": 2,
		"no-octal-escape": 2,
		"no-param-reassign": 2,
		"no-proto": 2,
		"no-redeclare": 2,
		"no-return-assign": 2,
		"no-script-url": 2,
		"no-self-compare": 2,
		"no-sequences": 2,
		"no-throw-literal": 2,
		"no-with": 2,
		"vars-on-top": 2,
		"wrap-iife": [2, "any"],
		"yoda": 2,
		"sorting/sort-object-props": "off",
		"indent": [2, "tab", {"SwitchCase": 1}],
		"brace-style": [
			2,
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"quotes": [
			2, "single", "avoid-escape"
		],
		"array-bracket-spacing": [2, "never"],
		"comma-spacing": [
			2,
			{
				"before": false,
				"after": true
			}
		],
		"comma-style": [2, "last"],
		"eol-last": 2,
		"key-spacing": [
			2,
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"keyword-spacing": [2, {"before": true, "after": true, "overrides": {}}],
		"new-cap": [
			2,
			{
				"newIsCap": true,
				"capIsNew": false
			}
		],
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1
			}
		],
		"no-multi-spaces": 2,
		"no-nested-ternary": "off",
		"no-new-object": 2,
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-extra-parens": [2, "all", {"nestedBinaryExpressions": false}],
		"no-underscore-dangle": 0,
		"object-curly-spacing": [2, "never"],
		"object-shorthand": [2, "always"],
		"one-var": [2, "never"],
		"padded-blocks": [2, {"blocks": "never", "classes": "never", "switches": "never"}],
		"semi": [2, "always"],
		"semi-spacing": [
			2,
			{
				"before": false,
				"after": true
			}
		],
		"space-before-blocks": 2,
		"space-before-function-paren": [2, "never"],
		"space-infix-ops": 2,
		"spaced-comment": [2, "always"],
		"max-len": [2, 100, 2],
		"flowtype/require-valid-file-annotation": [2, "always"],
		"flowtype/sort-object-type": "off",
		"flowtype/space-after-type-colon": [2, "always"],
		"flowtype/space-before-type-colon": [2, "never"]
	}
}
